{
    "name": "wusong8899/user-submission",
    "description": "A Flarum extension. Add user submission to the forum",
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "flarum/core": "^1.0"
    },
    "support": {
        "issues": "https://github.com/wusong8899/flarum-daily-check-in/issues",
        "source": "https://github.com/wusong8899/flarum-daily-check-in"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "wusong8899\\userSubmission\\": "src/"
        }
    },
    "authors": [
        {
            "name": "wusong8899"
        }
    ],
    "extra": {
        "flarum-extension": {
            "title": "wusong8899 User Submission",
            "icon": {
                "name": "fas fa-file-signature",
                "backgroundColor": "#68238c",
                "color": "#fff"
            }
        },
        "flarum-cli": {
            "modules": {
                "phpstan": true
            }
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "flarum/phpstan": "^1.0"
    },
    "scripts": {
        "analyse:phpstan": "phpstan analyse --memory-limit=512M",
        "clear-cache:phpstan": "phpstan clear-result-cache"
    },
    "scripts-descriptions": {
        "analyse:phpstan": "Run static analysis"
    }
}